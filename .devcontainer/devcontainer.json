{
  "name": "NodeBay Workspace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  "postCreateCommand": "chmod +x /workspaces/*/.devcontainer/*.sh && bash /workspaces/*/.devcontainer/install-base.sh 2>&1 | tee /tmp/install.log",
  "postStartCommand": "bash /workspaces/*/.devcontainer/boot.sh > /tmp/boot.log 2>&1 &",
  
  "portsAttributes": {
    "7681": {
      "label": "Claude Terminal",
      "visibility": "public",
      "protocol": "https"
    },
    "7682": {
      "label": "Codex Terminal", 
      "visibility": "public",
      "protocol": "https"
    },
    "7683": {
      "label": "Gemini Terminal",
      "visibility": "public", 
      "protocol": "https"
    },
    "7684": {
      "label": "Copilot Terminal",
      "visibility": "public",
      "protocol": "https"
    }
  },
  
  "forwardPorts": [7681, 7682, 7683, 7684],
  
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
